# Run the container with `docker run -p 3000:3000 -t file-storage`.
FROM docker.io/node:22-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system file-storage && \
          adduser --system -G file-storage file-storage

COPY dist/apps/file-storage file-storage/
RUN chown -R file-storage:file-storage .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
#RUN npm --prefix file-storage --omit=dev -f install

WORKDIR file-storage
RUN npm install
CMD ["node", "app.js"]
